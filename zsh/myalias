# general shortcuts

alias c='cd '
alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'

# listing files

# on mac use GNU ls so that vivid generated LS_COLORS can be applied
# alias ls="gls --color"
alias l='ls -lah'

#git
alias gs="git status"
alias gb="git branch -vv"
alias gp="git pull --rebase"

#tmux
alias tmls="tmux ls"
alias tm="tmux"
alias tmat="tmux a -t"
alias tmkill="tmux kill-session -t"

# editing shortcuts
alias m='vim'
alias n='nvim'

alias mf='m $(fzf)'
alias nf='n $(fzf)'

# make python3 default
alias python='python3'
alias pip='pip3'

# cd into a dir by using fzf
alias cdf='cd $(find . -type d -print | fzf)'
